<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alarm.AlarmSettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "알람 내용"
                    android:textSize = "20dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="내용">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id = "@+id/et_alarm_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "시간 설정"
                    android:textSize = "20dp"
                    />

                <!-- TODO: TimePicker Customize  !-->
                <TimePicker
                    android:id = "@+id/time_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=  "요일"
                    android:textSize = "20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "월"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "화"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_weds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "수"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_thurs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "목"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "금"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "토"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/check_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "일"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/radius"
                android:backgroundTint="@color/purple"
                android:layout_marginTop = "40dp"
                android:padding="10dp"
                android:text="삭제"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/radius"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:padding="10dp"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:tint="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
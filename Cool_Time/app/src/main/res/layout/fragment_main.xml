<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <!-- Today's Use Stats !-->
    <androidx.cardview.widget.CardView
        android:id= "@+id/cv_statistics_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:id ="@+id/ll_statistics_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding = "10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "오늘의 통계"
                android:textStyle="bold"
                android:textSize= "15dp"
                />

            <LinearLayout
                android:id = "@+id/ll_use_time"
                android:layout_width = "match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin = "10dp"
                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "사용시간"
                    android:textSize= "20dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id ="@+id/tv_use_time"
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "00 : 00 : 00"
                    android:textSize= "25dp"
                    android:textStyle="bold"
                    android:layout_marginTop = "10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "어제보다 2시간 5분 더 사용"
                    android:textSize= "15dp"
                    android:layout_marginTop= "5dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/ll_use_count"
                android:layout_width = "match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin ="10dp"
                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "사용 횟수"
                    android:textSize= "20dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id ="@+id/tv_use_count"
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "00"
                    android:textSize= "25dp"
                    android:textStyle="bold"
                    android:layout_marginTop = "10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "어제보다 5번 더 사용"
                    android:textSize= "15dp"
                    android:layout_marginTop= "5dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/ll_endured_time"
                android:layout_width = "match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin ="10dp"
                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "인내의 시간"
                    android:textSize= "20dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id ="@+id/tv_endured_time"
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "00: 00: 00"
                    android:textSize= "25dp"
                    android:textStyle="bold"
                    android:layout_marginTop = "10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "어제보다 5분 더 잠금"
                    android:textSize= "15dp"
                    android:layout_marginTop= "5dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/ll_recent_time"
                android:layout_width = "match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin ="10dp"
                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "가장 최근 사용 시간"
                    android:textSize= "20dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id ="@+id/tv_recent_time"
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "00: 00"
                    android:textSize= "25dp"
                    android:textStyle="bold"
                    android:layout_marginTop = "10dp"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <!--Time Statistics !-->
    <androidx.cardview.widget.CardView
        android:id = "@+id/cv_statistics_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop= "5dp">

        <RelativeLayout
            android:id="@+id/ll_statistics_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용 시간 통계"
                android:textSize="15dp"
                android:layout_alignParentTop = "true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/navigate_next_15dp" />
        </RelativeLayout>

        <!-- Chart View!-->
        <View
            android:layout_width="match_parent"
            android:layout_height="240dp"
            />
    </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin = "15dp"
    >
    <TextView
        android:id = "@+id/alarm_name"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toTopOf = "parent"
        android:textSize = "18dp"
        android:text= "알람 내용"
        android:textAlignment="center"
        android:layout_gravity= "center_horizontal"
        android:textColor= "@color/white"
        android:background = "@color/purple"
        />


    <TextView
        android:id = "@+id/alarm_time"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toBottomOf = "@id/alarm_name"
        android:textSize = "18dp"
        android:text= "오전 00:00"

        />

    <TextView
        android:id = "@+id/alarm_day"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toBottomOf = "@id/alarm_time"
        android:textSize= "15dp"
        android:textColor = "@color/light_gray"
        android:text= "매일"

        />

    <TextView
        android:id = "@+id/alarm_compare"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toBottomOf = "@id/alarm_day"
        android:textSize ="15dp"
        android:textColor = "@color/light_gray"
        android:text= "알람 0시간 0분 전"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
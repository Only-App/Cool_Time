<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.UseStat.UseStatFragment"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- Today's Use Stats !-->
        <androidx.cardview.widget.CardView
            android:id= "@+id/cv_statistics_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            card_view:cardElevation="2dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="10dp"
            >

            <LinearLayout
                android:id ="@+id/ll_stat_use_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding = "10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text= "사용시간 통계"
                    android:textStyle="bold"
                    android:textSize= "15dp"
                    />

                <TextView
                    android:id ="@+id/tv_use_time"
                    android:layout_width = "wrap_content"
                    android:layout_height=  "match_parent"
                    android:text = "00 : 00 : 00"
                    android:textSize= "30dp"
                    android:textStyle="bold"
                    android:layout_marginTop = "10dp"
                    android:layout_gravity="center_horizontal" />


                <LinearLayout
                    android:id = "@+id/ll_use_count_and_recent_time"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop ="30dp"
                    >

                    <TextView
                        android:id = "@+id/tv_stat_use_count"
                        android:layout_width = "0dp"
                        android:layout_height=  "wrap_content"
                        android:layout_weight="1"
                        android:text = "00"
                        android:textSize= "30dp"
                        android:textStyle=  "bold"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id ="@+id/tv_stat_recent_time"
                        android:layout_width = "0dp"
                        android:layout_height=  "match_parent"
                        android:layout_weight="2"
                        android:text = "00 : 00"
                        android:textSize= "30dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        />

                </LinearLayout>



                <LinearLayout
                    android:id = "@+id/ll_description_use_time_and_recent_time"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin ="10dp"
                    >

                    <TextView
                        android:id = "@+id/tv_description_use_time"
                        android:layout_width = "0dp"
                        android:layout_height=  "wrap_content"
                        android:layout_weight="1"
                        android:text = "폰 켠 횟수"
                        android:textSize= "20dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id ="@+id/tv_description_recent_time"
                        android:layout_width = "0dp"
                        android:layout_height=  "match_parent"
                        android:layout_weight="2"
                        android:text = "가장 최근 사용 시간"
                        android:textSize= "20dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        />

                </LinearLayout>

                <!--    차트 이미지 !-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:text = "대충 차트 이미지 "
                    android:textSize = "20dp"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!--App Statistics !-->
        <androidx.cardview.widget.CardView
            android:id = "@+id/cv_app_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop= "10dp"
            card_view:cardElevation="2dp"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="10dp"
            >

            <!--나중에 차트 넣으면 layout_height는 wrap_content로 바꿔야함 !-->
            <LinearLayout

                android:id="@+id/ll_statistics_time"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱별 사용 시간"
                    android:textSize="15dp"

                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text = "앱별 차트 이미지"
                    android:background="@color/background"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <!-- Chart View!-->
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>
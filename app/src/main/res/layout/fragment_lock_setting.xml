<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.phonelock.AddLockSettingFragment">

    <androidx.cardview.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:background="@android:color/transparent"
        android:layout_margin="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding = "10dp"
            >



            <LinearLayout
                android:id = "@+id/ll_today_total_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf= "parent"
                android:layout_marginTop = "10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "하루 총 사용량"
                    android:textSize= "20dp"
                    />

                <TextView
                    android:id = "@+id/tv_today_total_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "5dp"
                    android:background="@drawable/radius"
                    android:text = "0 시간 00 분"
                    android:textSize= "20dp"
                    android:padding = "8dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:id = "@+id/ll_interval_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_today_total_time"
                android:layout_marginTop = "10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "최소 사용 간격 시간"
                    android:textSize= "20dp"
                    />
                <TextView
                    android:id = "@+id/tv_interval_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop = "5dp"
                    android:background="@drawable/radius"
                    android:text = "0 시간 00 분"
                    android:textSize= "20dp"
                    android:padding = "8dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
            </LinearLayout>


           <LinearLayout
               android:id="@+id/ll_time_lock"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               app:layout_constraintTop_toBottomOf="@id/ll_interval_time"
               android:layout_marginTop = "10dp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text = "특정 시간 잠금"
                   android:textSize= "20dp"
                   />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop = "5dp"
                   >

                   <TextView
                       android:id="@+id/tv_start_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="5dp"
                       android:layout_weight="1.5"
                       android:background="@drawable/radius"
                       android:padding="8dp"
                       android:text="00:00"
                       android:textAlignment="center"
                       android:textSize="20dp" />

                   <TextView
                       android:padding="8dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="-"
                       android:textSize="20dp"
                       android:textAlignment="center"
                       />

                   <TextView
                       android:id="@+id/tv_end_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="5dp"
                       android:layout_weight="1.5"
                       android:background="@drawable/radius"
                       android:padding="8dp"
                       android:text="00:00"
                       android:textAlignment="center"
                       android:textSize="20dp" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="right">
                   <View
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       />

                   <CheckBox
                       android:id="@+id/cb_not_interval_setting"
                       android:layout_width="20dp"
                       android:layout_height="match_parent"
                       android:layout_gravity="right"
                       android:layout_marginRight="10dp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:text = "설정 안함"
                    />
               </LinearLayout>
           </LinearLayout>

            <LinearLayout
                android:id = "@+id/ll_select_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_time_lock"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text = "요일"
                    android:textSize ="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "월"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_tues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "화"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_weds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "수"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_thurs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "목"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "금"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "토"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/lock_check_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight = "1"
                        android:text = "일"
                        android:textAlignment="center"
                        android:button = "@null"
                        android:background="@drawable/selector_check_box"
                        android:textColor = "@drawable/selector_check_box_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin= "3dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/ll_select_day"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "날짜"
                    android:textSize = "20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/tv_start_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/radius"
                        android:padding="8dp"
                        android:text="시작 날짜"
                        android:textAlignment="center"
                        android:textSize="20dp" />

                    <TextView
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_end_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/radius"
                        android:padding="8dp"
                        android:text="종료 날짜"
                        android:textAlignment="center"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />
                    <CheckBox
                        android:id="@+id/cb_not_day_setting"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text = "설정 안함"
                        />
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id = "@+id/btn_add_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom = "10dp"
                app:tint = "@color/white"
                android:text = "확인"
                android:textSize = "20dp"
                android:textColor = "@color/white"
                android:background="@drawable/radius"
                android:backgroundTint="@color/colorPrimary"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>